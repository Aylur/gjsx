{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "ES2022",
        "target": "ES2023",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "jsxImportSource": "src",
    },
    "include": [
        "./node_modules/@girs/**/*",
        "./src/**/*",
    ],
}
